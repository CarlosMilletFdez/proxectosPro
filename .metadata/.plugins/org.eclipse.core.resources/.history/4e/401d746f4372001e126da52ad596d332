package misClases.avaliacion1;

import java.util.Scanner;

public class CSerie {

	private int num;
	
	public void amosa1_10() {
		
		for (num = 1; num <= 10; num = num + 1) {
			System.out.println(num);
		}	
	}
	public void amosa10_1() {
		
		int num = 10;
		while (num >= 1) {
			System.out.println(num);
			num= num - 1;
		}
	}
	public void amosaAta20(int num) {;
	
	System.out.print("Dame un numero entre 1 e 20: ");
	Scanner teclado = new Scanner(System.in);	
	num = teclado.nextInt();
		for (;num<=20;num=num + 1) {
			System.out.println(num);
		}
	teclado.close();
	}
	
	public void amosaDende20(int i) {
	
		int num = 20;
		Scanner teclado = new Scanner (System.in);
		System.out.print ("Dame un nÃºmero entre 1 e 20: ");
		i = teclado.nextInt();

			while (i <=num) {
			
				System.out.println(num);
				num = num - 1;
		}
	teclado.close();
